package laboratorios.lab08;

import java.sql.Connection;
import java.sql.SQLException;

import javax.swing.JOptionPane;

public class Main {

	public static void main(String[] args) throws Exception {
		Connection con = null;
		int op=0;
		
		try {
			
			con = Tools.obterConecao();
			
			while(op != 6) {
				op = Tools.menu();
				
				switch (op) {
					case 1: // listagem
						Tools.select(con);
						break;
					case 2: // criar
						
						var titulo2 = JOptionPane.showInputDialog("Informe o ID desejado:");
						var autor2 = JOptionPane.showInputDialog("Informe o ID desejado:");
						var ano_publicacao2 = Integer.parseInt(JOptionPane.showInputDialog("Informe o ID desejado:"));
						var editora2 = JOptionPane.showInputDialog("Informe o ID desejado:");
						var categorias2 = JOptionPane.showInputDialog("Informe o ID desejado:");
						
						Tools.criar(con,titulo2, autor2, ano_publicacao2, editora2, categorias2);
						
						break;
					case 3: // obter por ID
						
						var titulo3 = Integer.parseInt( JOptionPane.showInputDialog("Informe o ID desejado:"))
;

						// recuperar um item
						Tools.selectCategorias(con, titulo3);
						break;
				}
			}
			
			
			
			
			
		} catch (ClassNotFoundException e) {
			System.out.println("ERRO: driver de conexão não encontrado.");
			
		} catch (SQLException e) {
			System.out.println("ERRO: não foi possível conectar com banco - " + e.getMessage());
			
		} finally {
			Tools.closeCon(con);
		}

	}
	
}
