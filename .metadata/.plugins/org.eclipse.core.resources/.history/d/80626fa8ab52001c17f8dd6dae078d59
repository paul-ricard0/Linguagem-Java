package lab01_lab02;

import javax.swing.JOptionPane;
/**
 * Apresentar um programa que fornece o Índice de massa corporal (IMC) 
 * do usuário a partir do peso e altura, informando também qual é o nível do IMC.
 * 
 * @author Paulo Ricardo
 * Data: 03/09/2021
 * Bibliboteca Tools
 */

public class IMC {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		float peso = Tools.inputFloat("Qual o seu peso? ");
		
		float altura = Tools.inputFloat("Qual a sua altura? ");
		
		float IMC = Tools.IMC(altura, peso);
		
		JOptionPane.showMessageDialog(null, "Seu IMC é: " + IMC);

	}

}
