package laboratorios.lab08;

import java.sql.Connection;
import java.sql.SQLException;

public class Main {

	public static void main(String[] args) throws Exception {
		Connection con = null;
		
		
		try {
			con = Tools.obterConecao();
			Tools.criar(con, "abc", "def", 1,"ghy", "zcx");
			Tools.select(con);
			
		} catch (ClassNotFoundException e) {
			System.out.println("ERRO: driver de conexão não encontrado.");
			
		} catch (SQLException e) {
			System.out.println("ERRO: não foi possível conectar com banco - " + e.getMessage());
			
		} finally {
			Tools.closeCon(con);
		}

	}
	//insert into livros (titulo, autor, ano_publicacao, editora, categorias) values('z', 'x', 2000, 'y', 'k')
}
